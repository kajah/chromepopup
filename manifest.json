{
  "manifest_version": 2,
  "name": "Popup",
  "version": "1.0",
  "options_page": "options.html",
  "description": "Functional sticky note",
  "icons": { "128": "mushroom.png" },
  "background": {
    "persistent": false,
    "scripts": ["script.js"]
    
  },
  "permissions": ["http://*.google.com/", "https://*.google.com/", "tabs", "topSites", "activeTab", "https://ajax.googleapis.com/"],
  "browser_action": {
    "default_title": "Click here!",
    "default_icon": "king.png",
    "default_popup": "popup.html"
  }

}